<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Project Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= link_to 'Show', project, :class => "btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-primary"  %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path, :class => "btn btn-primary btn-sm"  %>
