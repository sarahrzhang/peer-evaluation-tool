<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <table>
      <thead>
        <tr><th>Add students to the course.</th></tr>
      </thead>
  
      <tbody>
        <% Student.all.each do |student| %>
          <% if course.students.none? { |current| current.email == student.email } %>
            <tr>
              <td><%= check_box_tag("add[]", student.email) %><td>
              <td><%= label_tag(student.first_name + student.last_name + ": " + student.email) %><td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>

   <table>
      <thead>
        <tr><th>Remove students from the course.</th></tr>
      </thead>
  
      <tbody>
        <% Student.all.each do |student| %>
          <% if course.students.any? { |current| current.email == student.email } %>
            <tr>
              <td><%= check_box_tag("remove[]", student.email) %><td>
              <td><%= label_tag(student.first_name + student.last_name + ": " + student.email) %><td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

  <div class="field">
    <%= form.label :course_name %>
    <%= form.text_field :course_name %>
  </div>

  <div class="field">
    <%= form.label :semester %>
    <%= form.text_field :semester %>
  </div>

    <%= form.submit %>
  </div>
<% end %>
